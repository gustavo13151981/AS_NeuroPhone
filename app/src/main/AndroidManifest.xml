<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.upc.caguilar.neurophone">

    <!--######################### PERMISOS #########################-->
    <!--SOCKETS-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--LLAMADA y CORTAR-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--SPEAKER-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- CONTACTOS -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- DB -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainMenuActivity"
            android:label="MainMenu" />
        <activity
            android:name=".activity.ContactoActivity"
            android:label="Contacto"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.LlamadaActivity"
            android:label="Llamada"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.MensajeActivity"
            android:label="Mensaje"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.CamaraActivity"
            android:label="Camara"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.EmergenciaActivity"
            android:label="Emergencia"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.GaleriaActivity"
            android:label="Galeria"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.RelojAlarmaActivity"
            android:label="RelojAlarma"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.DocumentoActivity"
            android:label="Documento"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.ReproductorAudioActivity"
            android:label="ReproductorAudio"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.InternetActivity"
            android:label="Internet"
            android:theme="@style/AppThemeNoActionBar" />
    </application>

</manifest>